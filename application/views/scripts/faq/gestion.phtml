<script type="text/javascript">
	$(document).ready(function(){
		$("#tableau_faq").flexigrid({
            url : 'getlistequestion',
            dataType: 'json',
            colModel : [
                    {display: 'Question', name : 'question', width : 433, sortable : true, align: 'left'},
                    {display: 'Reponse', name : 'reponse', width : 433, sortable : true, align: 'left'},
                    {display: 'Active', name : 'active', width : 100, sortable : true, align: 'left'},
                    {display : 'Catégorie', name : 'categorie', width : 150, sortable : true, align : 'left'}
            ],
            buttons : [
            		{name: 'Ajouter', bclass: 'add', onpress : add_record},
                    {separator: true},            
                    {name: 'Editer', bclass: 'edit', onpress : edit_record},
                    {separator: true},                    
                    {name: 'Supprimer', bclass: 'delete', onpress : delete_record},
            ],
            searchitems : [
                    {display: 'Question', name : 'question', isDefault : true},
                    {display: 'Reponse', name : 'reponse'},
                    {display: 'Active', name : 'active'},
                    {display : 'Catégorie', name : 'categorie'}
            ],
            sortname: "question",
            sortorder: "asc",
            usepager: true,
            title: "Liste des questions/reponses de la FAQ",
            useRp: true,
            rp: 20,
            showTableToggleBtn: false,
            resizable: false,
            height: 475,
            singleSelect: true
        });
        $(".ftitle").append('<span id="info" style="color : green"></span>');
        $(".ftitle").append('<span id="errors" style="color : red"></span>');
        
        function add_record(command, grid){
        	// On reinitialise les champs
			$("#question").val('');
			$("#reponse").val('');
			$("#categorie").val('');
			$("#active").removeAttr("checked");
        	
			// On vérifie si l'utilisateur à le droit
            if($("#ajouter_faq").val() != 'true'){
               $("#errors").html('&nbsp;Vous n\'avez pas l\'autorisation d\'effectuer cette action !');
               $("#errors").show();
               setTimeout(function() {
                   $("#errors").fadeOut("slow");
               }, 2000 );     
               return false;
            }
            
            $("#add_dialog").dialog({
            	width : 850,
            	height : 375,
            	title : "Ajouter une question",
            	buttons : [
            		{	text : "Valider",
            			click : function(){
            				$.ajax({
            				type : 'post',
            				url : 'add',
            				data : {'question' : $("#question").val(),'reponse' : $("#reponse").val(),'active' : $("#active").attr("checked"), 'categorie' : $("#categorie").val()},
             				success : function(){
             					$("#tableau_faq").flexReload();
             					$("#add_dialog").dialog('close');
             					$("#info").html('&nbsp;La question à été ajotuée !');
					                $("#info").show();
					                setTimeout(function() {
					                    $("#info").fadeOut("slow");
					                }, 2000 );
             					}
            				});
            			}
            		},
            		{
            			text : "Annuler",
            			click : function(){
            				$(this).dialog('close');
            			}
            		}	
            	]
            });
        }
        
        function edit_record(command, grid){
        	// On vérifie si l'utilisateur à le droit
            if($("#modifier_faq").val() != 'true'){
               $("#errors").html('&nbsp;Vous n\'avez pas l\'autorisation d\'effectuer cette action !');
               $("#errors").show();
               setTimeout(function() {
                   $("#errors").fadeOut("slow");
               }, 2000 );     
               return false;
            }
             
            var record_count = $('.trSelected',grid).length;
            if (0 == record_count)
            {
                $("#errors").html('&nbsp;Veuillez dabord sélectionner une ligne !');
                $("#errors").show();
                setTimeout(function() {
                    $("#errors").fadeOut("slow");
                }, 2000 );
                return;
            }
            
            var id;
            $('.trSelected',grid).each(function(){
                 id = this.id.substr(3);
                 
                 var active;
                 if($('td[abbr="active"] >div', this).html() == "oui")
                 	active = true;
                 else
                 	active = false;
				
                 $("#question").val($('td[abbr="question"] >div', this).html());
                 $("#reponse").val($('td[abbr="reponse"] >div', this).html());
                 $("#categorie").val($('td[abbr="categorie"] >div', this).html());
                 $("#active").attr("checked", active);
             });
             
             $("#add_dialog").dialog({
            	width : 850,
            	height : 375,
             	title : "Modifier une question",
             	buttons : [
             		{
             			text : "Valider",
             			click : function(){
             				$.ajax({
             					type : "post",
             					url : "edit",
             					data : {"id" : id, "question" : $("#question").val(), "reponse" : $("#reponse").val(), "active" : $("#active").attr("checked"), 'categorie' : $("#categorie").val()},
             					success : function(){
             						$("#tableau_faq").flexReload();
             						$("#add_dialog").dialog('close');
             						$("#info").html('&nbsp;La question à été modifiée !');
					                $("#info").show();
					                setTimeout(function() {
					                    $("#info").fadeOut("slow");
					                }, 2000 );
             					}
             				});
             			}
             		},
             		{
             			text : "Annuler",
             			click : function(){
             				$(this).dialog('close');
             			}
             		}
             	]
             });
        }

		function delete_record(command, grid){
			// On vérifie si l'utilisateur à le droit
            if($("#supprimer_faq").val() != 'true'){
               $("#errors").html('&nbsp;Vous n\'avez pas l\'autorisation d\'effectuer cette action !');
               $("#errors").show();
               setTimeout(function() {
                   $("#errors").fadeOut("slow");
               }, 2000 );     
               return false;
            }
             
            var record_count = $('.trSelected',grid).length;
            if (0 == record_count)
            {
                $("#errors").html('&nbsp;Veuillez dabord sélectionner une ligne !');
                $("#errors").show();
                setTimeout(function() {
                    $("#errors").fadeOut("slow");
                }, 2000 );
                return;
            }
            
            var id;
            
            $(".trSelected", grid).each(function(){
            	id = this.id.substr(3);
            });
            
            $("#delete_dialog").dialog({
            	title : "Supprimer une question",
            	buttons : [
            		{
            			text : "Valider",
            			click : function(){
            				$.ajax({
            					type : 'post',
            					url : 'delete',
            					data : {'id' : id},
            					success : function(){
            						$("#tableau_faq").flexReload();
            						$("#delete_dialog").dialog('close');
            						$("#info").html('&nbsp;La question à été supprimée !');
					                $("#info").show();
					                setTimeout(function() {
					                    $("#info").fadeOut("slow");
					                }, 2000 );
            					}
            				});	
            			}
            		},
            		{
            			text : "Annuler",
            			click : function(){
            				$(this).dialog('close');
            			}
            		}
            	]
            });
		}
	});
</script>